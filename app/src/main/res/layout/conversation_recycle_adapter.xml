<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">
    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/chat_left_msg_image_view"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chat_left_msg_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hello Owner"
            android:padding="10dp"
            android:layout_weight="0.8"
            android:background="@drawable/chat_bubble_left"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/chat_left_time_layout"
        android:layout_marginLeft="45dp"
        android:layout_gravity="left">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/chat_left_msg_time"
            android:text="Fri 14 Jun 2019 12:47"
            android:layout_weight="0.9"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chat_right_msg_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hello Renter"
            android:padding="10dp"
            android:layout_weight="0.6"
            android:textColor="@android:color/white"
            android:background="@drawable/chat_bubble_right"
            android:layout_margin="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/chat_right_msg_image_view"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/chat_right_time_layout"
        android:layout_marginRight="45dp"
        android:layout_gravity="right">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/chat_right_msg_time"
            android:text="Fri 14 Jun 2019 12:47"
            android:layout_weight="0.9"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_black"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.SearchView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:id="@+id/renter_main_search_view"
                    android:focusableInTouchMode="true"
                    app:iconifiedByDefault="false"
                    app:queryHint="Machine"/>
                <!--<androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/renter_main_search_view"
                    android:layout_weight="0.8"
                    android:hint="Machine #"
                    android:drawableLeft="@drawable/ic_search_new"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:focusableInTouchMode="true"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:id="@+id/renter_main_filter"
                        android:src="@drawable/filter_empty"/>
                </LinearLayout>
              <!--  <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/renter_main_filter"
                    android:layout_weight="0.2"
                    android:padding="12dp"
                    android:src="@drawable/ic_filter_blue_new"/>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/renter_main_machineTag"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:text="@string/renter_machine"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:listSelector="#666666"
                android:overScrollMode="never"
                android:id="@+id/renter_main_category_recycle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subCategoryTag"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Available machines for your needs..."/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:id="@+id/renter_main_subcategory_recycle"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
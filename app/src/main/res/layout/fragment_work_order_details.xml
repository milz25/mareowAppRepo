<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainDetailsFragment.WorkOrderDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/machine_details_footer">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerInParent="true"
        android:id="@+id/work_order_details_machine_details">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_work_order"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:id="@+id/work_order_details_workimage"
                    android:layout_gravity="center_vertical"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/work_order_details_workdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/work_order_details_workimage"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Work Order"
                    android:textSize="16dp"
                    android:textColor="@android:color/darker_gray" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work order details"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/work_order_details_workimage"
                    android:layout_below="@+id/work_order_details_workdetails"
                    android:id="@+id/machine_details_heading"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/work_order_details_status"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/machine_details"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:id="@+id/work_order_details_machineimage"
                    android:layout_gravity="center_vertical"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_order_details_machine"
                    android:layout_toRightOf="@+id/work_order_details_machineimage"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Machine "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/work_order_details_machineimage"
                    android:layout_below="@+id/work_order_details_machine"
                    android:text="Machine type"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/machine_details_machine_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:id="@+id/work_order_details_locationimage"
                    android:layout_gravity="center_vertical"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_order_details_location"
                    android:layout_toRightOf="@+id/work_order_details_locationimage"
                    android:text="Location "
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/work_order_details_locationimage"
                    android:layout_below="@+id/work_order_details_location"
                    android:id="@+id/machine_details_location"
                    android:text="Ahmedabad"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Plan Date"
                    android:paddingTop="10dp"
                    android:paddingLeft="32dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Actual Date"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/machine_details_plan_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_latest_start_date"
                        android:gravity="center_horizontal"
                        android:paddingLeft="8dp"
                        android:paddingBottom="5dp"
                        android:text="Plan Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_latest_end_date"
                        android:text="Plan Date"
                        android:paddingLeft="8dp"
                        android:id="@+id/machine_details_plan_enddate"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/machine_details_actual_startdate"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/machine_details_actual_enddate"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_range"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:id="@+id/work_order_details_plandaysimage"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_order_details_plandaysheading"
                    android:gravity="center_horizontal"
                    android:text="Plan Days"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:layout_toRightOf="@+id/work_order_details_plandaysimage"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan days"
                    android:layout_toRightOf="@+id/work_order_details_plandaysimage"
                    android:layout_below="@+id/work_order_details_plandaysheading"
                    android:id="@+id/machine_details_plane_noofdays"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/machine_details_plane_actualdaysheading"
                    android:text="Actual Days"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actual days"
                    android:id="@+id/machine_details_actual_noofdays"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_below="@+id/machine_details_plane_actualdaysheading"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_access_time"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:id="@+id/work_order_details_planhoursimage"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/work_order_details_planhoursheading"
                        android:gravity="center_horizontal"
                        android:text="Plan Hours"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_toRightOf="@+id/work_order_details_planhoursimage"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan hour"
                        android:layout_toRightOf="@+id/work_order_details_planhoursimage"
                        android:layout_below="@+id/work_order_details_planhoursheading"
                        android:id="@+id/machine_details_plan_hours"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/machine_details_plane_actualhoursheading"
                        android:text="Actual Hours"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actual Hours"
                        android:id="@+id/machine_details_actual_hours"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_below="@+id/machine_details_plane_actualhoursheading"
                        android:textColor="@android:color/black"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/machine_details_footer"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/machine_details_feedback"
            android:text="Feedback"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/button_shape"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/machine_details_dailyhour"
            android:text="Daily Logs"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/button_shape"/>
    </LinearLayout>
</RelativeLayout>
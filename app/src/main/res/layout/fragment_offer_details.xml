                android:layout_height="58dp"
                android:id="@+id/offer_details_footer_accept_offer"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_squre_final"
                android:layout_marginLeft="5dp"/>
            <!--</LinearLayout>-->
        </RelativeLayout>
